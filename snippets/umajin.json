{
	"Class Definition": {
		"prefix": "define",
		"body": [
			"define ${1:type} ${2:name}",
			"\t$0",
			"end"
		],
		"description": "Class Definition"
	},
	
	"Instance": {
		"prefix": "instance",
		"body": [
			"instance ${1:type} ${2:name}",
			"\t$0",
			"end"
		],
		"description": "Instance"
	},
	
	"Method Definition": {
		"prefix": "method",
		"body": [
			"method ${1:name}($2)",
			"\t$0",
			"end"
		],
		"description": "Public Method Definition"
	},
	
	"Include file": {
		"prefix": "include file",
		"body": [
			"#include '${1:filepath}.u'"
		],
		"description": "Include file"
	},
	
	"Loop": {
		"prefix": "loop",
		"body": [
			"loop uint ${1:i} = 0; ${1:i} < ${2:max}; ${1:i}++",
			"\t$0",
			"end"
		],
		"description": "Loop"
	},
	
	"Loop in": {
		"prefix": "loop",
		"body": [
			"loop in ${1:container}: ${2:key} key, ${3:value} value",
			"\t$0",
			"end"
		],
		"description": "Loop in container"
	},
	
	"If Statement": {
		"prefix": "if",
		"body": [
			"if ${1:condition}",
			"\t$0",
			"end"
		],
		"description": "If Statement"
	},
	
	"If-Else Statement": {
		"prefix": "ifelse",
		"body": [
			"if ${1:condition}",
			"\t$0",
			"else",
			"\t",
			"end"
		],
		"description": "If-Else Statement"
	},
	
	"Switch Statement": {
		"prefix": "switch",
		"body": [
			"switch ${1:key}",
			"case ${2:value}",
			"\t$0",
			"else",
			"\t",
			"}"
		],
		"description": "Switch Statement"
	}
}